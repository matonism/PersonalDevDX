<aura:component >
    <aura:attribute name="items" type="Camping_Item__c[]" />
    <aura:attribute name="newItem" type="Camping_Item__c" default="{'sobjectType':'Camping_Item__c',
                                                                   'Name':'',
                                                                   'Quantity__c':0,
                                                                   'Price__c':0}"
                                                                   />
    
    
	<h1>Camping List</h1>

    <p> Name: <ui:inputText aura:id="nameField" value='{!v.newItem.Name}'/></p>
    <p> Quantity: <ui:inputNumber aura:id="quantityField" value='{!v.newItem.Quantity__c}'/></p>
    <p> Price: <ui:inputCurrency aura:id="priceField" value='{!v.newItem.Price__c}'/></p>
    <p> is Packed?: <ui:inputCheckbox aura:id="packedField" value='{!v.newItem.Packed__c}'/></p>

</aura:component>