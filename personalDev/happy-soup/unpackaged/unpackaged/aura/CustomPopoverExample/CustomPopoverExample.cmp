    <div class="popover-container">

	    <c:CustomPopover showPopover="{!v.showPopover1}" placement="left">

	    	<aura:set attribute="popoverAnchor">
			    <div class="hover-text" aura:id="hoverElement">
			        Click to open and close popover
			    </div>
	    	</aura:set>

	        Popover Contents <br/> More Popover Contents
	        
	    </c:CustomPopover>
    </div>  

    <br/>

