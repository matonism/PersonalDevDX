<aura:component implements="flexipage:availableForAllPageTypes">

    <aura:attribute name="showPopover1" type="Boolean" default="false"/>   
    <aura:attribute name="showPopover2" type="Boolean" default="false"/>   
    <aura:attribute name="showPopover3" type="Boolean" default="false"/>   
    <aura:attribute name="showPopover4" type="Boolean" default="false"/>  
    <aura:attribute name="showPopover5" type="Boolean" default="false"/>   
